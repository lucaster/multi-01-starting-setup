docker stop goals-frontend
docker stop goals-backend
docker stop mongodb
docker build -t goals-node  ./backend
docker build -t goals-react ./frontend
docker network create goals-net
docker volume rm data
docker volume rm logs
docker run --name mongodb        -d  --rm --network goals-net -v data:/data/db -e MONGO_INITDB_ROOT_USERNAME=max -e MONGO_INITDB_ROOT_PASSWORD=secret mongo
docker run --name goals-backend  -d  --rm --network goals-net -v "/$(pwd)/backend:/app" -v logs:/app/logs -v /app/node_modules -e MONGODB_USERNAME=max -e MONGODB_PASSWORD=secret -p 80:80         goals-node
docker run --name goals-frontend -it --rm --network goals-net -v "/$(pwd)/frontend/src:/app/src" -e CHOKIDAR_USEPOLLING=true -p 3000:3000     goals-react

-it necessario per react npm start